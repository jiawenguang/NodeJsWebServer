<%- include header %>
   <div class="ace-wrapper">
		<!--导航1-->
        <header id="ace-header" class="ace-container-shift ace-logo-in ace-head-boxed ace-nav-right">
        <%-include nav%>
        </header>
        <!--导航1-->
        <!--导航2-->
        <nav id="ace-nav-sm" class="ace-nav hidden-lg hidden-md">
        <%- include nav-top %>
        </nav>
        <!--导航2-->
        <!--名片-->
        <article id="ace-card" class="ace-card bg-primary">
		<%- include card %>
		</article>
        <!--名片-->
        <!--主体内容-->
        <div id="ace-content" class="ace-container-shift">
            <div class="ace-container">
            	<!--内容侧栏导航-->
            	<div id="ace-nav-wrap" class="hidden-sm hidden-xs">
                    <div class="ace-nav-cont">
                        <div id="ace-nav-scroll">
                            <nav id="ace-nav" class="ace-nav">
                                <%- include nav-center %>
                            </nav>
                        </div>
                        <div id="ace-nav-tools" class="hidden">
                            <span class="ace-icon ace-icon-dots-three-horizontal"></span>
                            <button id="ace-nav-arrow" class="clear-btn">
                                <span class="ace-icon ace-icon-chevron-thin-down"></span>
                            </button>
                        </div>
                    </div>
                    <div class="ace-nav-btm"></div>
              	</div>
				<!--内容侧栏导航-->
				<!--内容正文-->
		        <div class="ace-paper-stock">
		            <main class="ace-paper clearfix">
		                <div class="ace-paper-cont clear-mrg">
									<header class="page-header padd-box">
										<h1 class="title-lg text-upper">Blog</h1>
									</header>
									<!--//文章列表-->
									<%blog.forEach(function(blog,index){%>
									<article class="post hentry">
										<div class="post-media">
												<a href="/blog?id=<%=blog.id%>" rel="bookmark">
													<figure class="post-figure">
														<img src="img/uploads/post-image.jpg" alt="">
													</figure>
												</a>
										</div>
										<div class="padd-box-sm">
											<header class="post-header text-center">
												<h2 class="post-title entry-title text-upper"><a rel="bookmark" href="single-image.html"><%=blog.title%></a></h2>
												<div class="post-header-info">
													<span class="posted-on"><span class="screen-reader-text">Posted on </span><a
															href="#" rel="bookmark">												
															<time class="post-date published" datetime="2016-07-04T11:33:08+00:00"><%=blog.date%></time>
															<time class="post-date updated" datetime="2016-12-08T14:45:55+00:00">8 December 2016</time>
														</a></span>
													&nbsp;<span class="post-author vcard">来源：<a class="url fn n" href="#" rel="author"><%=blog.author%></a></span>
												</div>
											</header>
											<div class="post-content entry-content editor clearfix clear-mrg">
												<div id="">
													<%-blog.content-%>
												</div>
											</div>
											<footer class="post-footer">
												<div class="post-footer-top brd-btm clearfix">
													<div class="post-footer-info">
															<span class="post-cat-links">
																<span class="screen-reader-text">分类：</span>
															   <% var tag =  blog.tag.split(',');for(var i=0;i< tag.length;i++){ var index = tag[i]%>
																<a href="#" rel="category tag"><%= index%></a>
																<%}%>
															</span>
															<span class="post-line">|</span>
															<a href="" class="post-comments-count"><%=blog.comment%> 评论</a>
													</div>
													<div class="post-more">
														<a class="btn btn-sm btn-primary" href="single-image.html" rel="bookmark">查看更多</a>
													</div>
												</div>
											</footer>
										</div>
									</article>
									<%});%>
									<!--//文章列表-->
									<div class="pagination">
										<a class="" href=""><i class="ace-icon ace-icon-chevron-left"></i></a>
										<span class="page-numbers current">1</span>
										<a class="page-numbers" href="">2</a>
										<a class="page-numbers" href="">3</a>
										<a class="page-numbers" href="">4</a>
										<a class="page-numbers" href="">5</a>
										<a class="next page-numbers" href=""><i class="ace-icon ace-icon-chevron-right"></i></a>
									</div>
        				</div>
    				</main>
				</div>
				<!--内容正文-->
	        </div>
    	</div>
        <!--主体内容-->
        <!--侧栏内容-->
		<div id="ace-sidebar">
			<%- include nav-side %>
		</div>
		<!--侧栏内容-->
<%- include footer%>
